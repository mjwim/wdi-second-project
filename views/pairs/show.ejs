<div class="container">
  <div class="row">

<div class="col">

<h1><a href="/wines/<%= pair.wine.id%>"><%= pair.wine.name %></a> & <a href="/cheeses/<%= pair.cheese.id%>"><%= pair.cheese.name %></h1></a>

<img class="img-fluid img-thumbnail col-4" src ="<%= pair.wine.image %>" alt="<%= pair.wine.name %>">
<img class="img-fluid img-thumbnail col-4" src ="<%= pair.cheese.image %>" alt="<%= pair.cheese.name %>">
</div>
<div class="col">

<p>Paired by: <%= pair.createdBy.username %></p>
<p><%= pair.description %></p>
<p>Comments: <% pair.comments.forEach((comment) => { %>
  <p><%= comment.content %></p>
  <small><%= comment.createdBy.username %></small> <%/* need to update to comment.createdBy.username */%>
  <% if(locals.isLoggedIn && comment.belongsTo(user)) { %>
    <form method="POST" action="/pairs/<%= pair.id %>/comments/<%= comment.id %>">
      <input type="hidden" name="_method" value="DELETE">
      <button>Delete</button>
    </form>
  <% } %>
<% }) %>

<% if(locals.isLoggedIn && pair.belongsTo(user)) { %>
<form method="POST" action="/pairs/<%= pair.id %>">
  <input type="hidden" name="_method" value="DELETE">
  <button>DELETE</button>
</form>
<% } %>

<% if(locals.isLoggedIn) { %>
  <section>
    <h4>Leave a comment</h4>
    <form method="POST" action="/pairs/<%= pair.id %>/comments">
      <textarea name="content" id="content" placeholder="Comment"></textarea>
      <button class="button">Leave a comment</button>
    </form>
  </section>
<% } %>

</div>
</div>
</div>
